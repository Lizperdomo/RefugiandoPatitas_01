<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RefugiandoPatitas"
        tools:targetApi="31">

        <!-- MainActivity configurada como actividad de inicio -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity corregida -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades con android:exported="true" -->
        <activity android:name=".AdoptionFormActivity" android:exported="true" />
        <activity android:name=".AdoptarPerritoFragment" android:exported="true" />
        <activity android:name=".AdopcionesAdminActivity" android:exported="true" />
        <activity android:name=".DetalleReporteActivity" android:exported="true" />
        <activity android:name=".HistorialAdopcionActivity" android:exported="true" />
        <activity android:name=".HistorialReportesActivity" android:exported="true" />
        <activity android:name=".ListaReportesActivity" android:exported="true" />
        <activity android:name=".ListaSolicitudesActivity" android:exported="true" />
        <activity android:name=".RegisterActivity" android:exported="true" />
        <activity android:name=".SolicitudAdopcionActivity" android:exported="true" />
        <activity android:name=".SalirFragment" android:exported="true" />


    </application>
</manifest>
